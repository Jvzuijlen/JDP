@model List<JusDanceProjects.API.Models.Photo>

@{
}

<form asp-controller="Photos" asp-action="Index">
    <h1>Photos:</h1>
    <a asp-controller="Photos" asp-action="Create" class="btn btn-primary">Create new</a>
</form>

<div class="container">
    <div class="row">
    @foreach(var item in Model)
    {
      <div class="card col-12 col-sm-6 col-lg-3 col-xl-2">
        <img src="@Url.Content(item.Url)" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@item.DateAdded</h5>
            <p class="card-text">@item.Description</p>
            <a asp-controller="Photos" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Delete</a>
          </div>
        </div>
    }
    </div>
</div>