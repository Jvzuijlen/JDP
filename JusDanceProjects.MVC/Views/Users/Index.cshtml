@model List<JusDanceProjects.API.Models.User>

@{
}

<form asp-controller="Users" asp-action="Index">
    <p>
        Title: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<div class="container">
    <div class="row">
    @foreach(var item in Model)
    {
      <div class="card col-12 col-sm-6 col-lg-3 col-xl-2">
        <div class="card-body">
            <h5 class="card-title">@item.Username</h5>
            <p class="card-text">@item.Id</p>
            <a asp-controller="Users" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Delete</a>
          </div>
        </div>
    }
    </div>
</div>
